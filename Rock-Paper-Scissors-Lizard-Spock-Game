// Description: Create a Rock Paper Scissor Lizard Spock application
// TODO Auto-generated method stub
import java.util.Scanner;

public class RPSLS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		{

			final int ROCK = 1, PAPER = 2, SCISSORS = 3, LIZARD = 4, SPOCK = 5;
			int playerThrow, computerThrow;
			Scanner input = new Scanner(System.in);

			// prompt player for throw and read number typed
			System.out.print("Enter your throw (1=Rock, 2=Paper, 3=Scissors, 4=Lizard, 5=Spock): ");
			playerThrow = input.nextInt();
			input.close();

			// Generate computer throw
			computerThrow = (int)(5 * Math.random() + 1); // random int between 1 and 3

			// Inform player of throws
			System.out.print("Player throws ");
			if  (playerThrow == ROCK)
			{
				System.out.println("ROCK.");
			}
			else if (playerThrow == PAPER)
			{
				System.out.println("PAPER.");
			}
			else if (playerThrow == SCISSORS)
			{
				System.out.println("SCISSORS.");
			}
			else if (playerThrow == LIZARD)
			{
				System.out.println("LIZARD.");
			}
			else if (playerThrow == SPOCK)
			{
				System.out.println("SPOCK.");
			}

			System.out.print("Computer throws ");
			if (computerThrow == ROCK)
			{
				System.out.println("ROCK.");
			}
			else if (computerThrow == PAPER)
			{
				System.out.println("PAPER.");
			}
			else if (computerThrow == SCISSORS)
			{
				System.out.println("SCISSORS.");
			}
			else if (computerThrow == LIZARD)
			{
				System.out.println("LIZARD.");
			}
			else if (computerThrow == SPOCK)
			{
				System.out.println("SPOCK.");
			}

			/* Determine winner */
			if (playerThrow == ROCK && computerThrow == ROCK)
			{
				System.out.println("It's a draw!");
			}
			else if (playerThrow == ROCK && computerThrow == PAPER)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == ROCK && computerThrow == SCISSORS)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == ROCK && computerThrow == LIZARD)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == ROCK && computerThrow == SPOCK)
			{
				System.out.println("Computer wins!");
			}

			if (playerThrow == PAPER && computerThrow == ROCK)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == PAPER && computerThrow == PAPER)
			{
				System.out.println("It's a draw!");
			}
			else if (playerThrow == PAPER && computerThrow == SCISSORS)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == PAPER && computerThrow == LIZARD)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == PAPER && computerThrow == SPOCK)
			{
				System.out.println("Player wins!");
			}

			if (playerThrow == SCISSORS && computerThrow == ROCK)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == SCISSORS && computerThrow == PAPER)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == SCISSORS && computerThrow == SCISSORS)
			{
				System.out.println("It's a draw!");
			}
			else if (playerThrow == SCISSORS && computerThrow == LIZARD)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == SCISSORS && computerThrow == SPOCK)
			{
				System.out.println("Computer wins!");
			}

			if (playerThrow == LIZARD && computerThrow == ROCK)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == LIZARD && computerThrow == PAPER)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == LIZARD && computerThrow == SCISSORS)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == LIZARD && computerThrow == LIZARD)
			{
				System.out.println("I'ts a draw!");
			}
			else if (playerThrow == LIZARD && computerThrow == SPOCK)
			{
				System.out.println("Player wins!");
			}

			if (playerThrow == SPOCK && computerThrow == ROCK)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == SPOCK && computerThrow == PAPER)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == SPOCK && computerThrow == SCISSORS)
			{
				System.out.println("Player wins!");
			}
			else if (playerThrow == SPOCK && computerThrow == LIZARD)
			{
				System.out.println("Computer wins!");
			}
			else if (playerThrow == SPOCK && computerThrow == SPOCK)
			{
				System.out.println("It's a draw!");
			}

		} 
	}
}
